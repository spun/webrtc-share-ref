{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb-typescript"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "linebreak-style": "off",
        "no-console": "off",
        "jsx-a11y/anchor-is-valid": [
            "error",
            {
              "components": ["Link"],
              "specialLink": ["hrefLeft", "hrefRight"],
              "aspects": ["noHref", "invalidHref", "preferButton"]
            }
          ]
    }
}